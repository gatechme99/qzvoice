<% include ../partials/header %>
    <div class="container">
    
        <div class="row">
            
            <div class="container">
                <h4>Edit Comment for <%= suggestion.title %></h4>
                <p><%= suggestion.descr %></p>
            </div>
            
            <div class="container col-md-8">
                <form action="/qzvoice/<%= suggestion._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <div class="form-group">
                        <textarea  class="form-control" rows="3" name="comment[text]" maxlength="500"><%= comment.text %></textarea>
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
<% include ../partials/footer %>