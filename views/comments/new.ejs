<% include ../partials/header %>
    <div class="container">
    
        <div class="row">
            <div class="container">
                <h4>Add New Comment for <%= suggestion.title %></h4>
                <p><%= suggestion.descr %></p>
            </div>
            
            <div class="container col-md-8">
                <form action="/qzvoice/<%= suggestion._id %>/comments" method="POST">
                    <div class="form-group">
                        <textarea  class="form-control" rows="3" name="comment[text]" placeholder="comment" maxlength="500"></textarea>
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% include ../partials/footer %>