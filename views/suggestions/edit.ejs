<% include ../partials/header %>
    <div class="container">
    
        <div class="row">
            
            <div class="container">
                <h4>Edit Suggestion</h4>
            </div>
            
            <div class="container col-md-8">
                <form action="/qzvoice/<%= suggestion._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="suggestion[title]" value="<%= suggestion.title %>" maxlength="140">
                    </div>
                    
                    <div class="form-group">
                        <textarea  class="form-control" rows="5" name="suggestion[descr]" maxlength="1000"><%= suggestion.descr %></textarea>
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
<% include ../partials/footer %>